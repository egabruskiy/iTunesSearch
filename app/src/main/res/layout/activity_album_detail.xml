<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/artwork_album_detail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/artwork_album_detail"
            android:orientation="vertical"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/artist_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artistname"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/album_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/album_year_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/album_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9_99"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/track_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>